<div class="col-md-4 col-md-offset-4 well signin">
  <h2 class='text-info text-center'>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group">
    <%= f.email_field :email, autofocus: true, class:'form-control input-lg', placeholder:'Email' %>
    <span title='Your Email' class="input-group-addon glyphicon glyphicon-user"></span>
  </div>

  <div><%= f.submit "Resend confirmation instructions", class: 'btn btn-primary btn-block btn-lg' %></div>
  <% end %>

  <%= render "confirmable/shared/links" %>
</div>