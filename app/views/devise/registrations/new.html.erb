<div class="col-md-6 col-md-offset-3 panel well signin panel-default">
  <div class="panel-body">
    <h2>Create an Account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <div class="input-group">
          <span title='Your Email' class="input-group-addon">@</span>
          <%= f.text_field :email, class:'form-control', placeholder: 'Your email' %>
        </div>
        <div class="input-group">
          <span title='Your Password' class="input-group-addon glyphicon glyphicon-lock"></span>
          <%= f.password_field :password, class:'form-control', placeholder: 'Pick a password' %>
        </div>
        <div class="input-group">
          <span title='Your Password Again' class="input-group-addon">&nbsp;&nbsp;&nbsp;</span>
          <%= f.password_field :password_confirmation, class:'form-control', placeholder: 'Confirm password ' %>
        </div>

        <div class="input-group">
          <span title='Create Account' class="input-group-addon glyphicon glyphicon-log-in"></span>
          <%= f.submit "Create Account", class:'form-control btn btn-primary' %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>

</div>
