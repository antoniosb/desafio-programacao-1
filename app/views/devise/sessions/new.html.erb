<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Sign in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="input-group">
      <%= f.email_field :email, autofocus: true, class:'form-control input-lg', placeholder:'Email' %>
      <span title='Your Email' class="input-group-addon glyphicon glyphicon-user"></span>
    </div>

    <div class="input-group">
      <%= f.password_field :password, autocomplete: "off", class:'form-control input-lg', placeholder:'Password' %>
      <span title='Your Password' class="input-group-addon glyphicon glyphicon-lock"></span>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input-group">
        <span class="input-group-addon"><%= f.check_box :remember_me %></span>
        <span class="form-control"><%= f.label :remember_me, class:'text-muted' %></span>
        <span title='Remember this session?' class="input-group-addon glyphicon glyphicon-flag"></span>
      </div>
    <% end -%>

    <div><%= f.submit "Sign in", class: 'btn btn-primary btn-block btn-lg' %></div>
  <% end %>
    
<%= render "devise/shared/links" %>

</div>


