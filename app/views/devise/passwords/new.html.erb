<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Forgot your password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    
    <div class="input-group">
      <%= f.email_field :email, autofocus: true, class:'form-control input-lg', placeholder:'Email' %>
      <span title='type your email' class="input-group-addon glyphicon glyphicon-user"></span>
    </div>

    <div><%= f.submit "Send me reset password instructions", class: 'btn btn-info btn-block btn-lg' %></div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>

