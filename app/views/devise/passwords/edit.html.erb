<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="input-group">
      <span class="input-group-addon glyphicon glyphicon-lock"></span>
      <%= f.password_field :password, class:'form-control', placeholder: 'New password' %>
    </div>
    <div class="input-group">
      <span class="input-group-addon">&nbsp;&nbsp;&nbsp;</span>
      <%= f.password_field :password_confirmation, autocomplete:'off', class:'form-control', placeholder: 'Confirm new password ' %>
    </div>

    <div><%= f.submit "Change my password", class: 'btn btn-info btn-block btn-lg' %></div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
